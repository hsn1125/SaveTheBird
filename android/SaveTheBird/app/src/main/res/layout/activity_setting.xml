<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    tools:context="com.latte_project.stb.savethebird.SettingActivity">

    <FrameLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="324dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="@color/colorWhite"
        android:layout_weight="0.25"
        android:backgroundTint="@color/button_material_light"
        tools:context="com.latte_project.stb.savethebird.SettingActivity">


        <!-- ボリューム -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Volume"
            android:id="@+id/textView3"
            android:textColor="@android:color/widget_edittext_dark"
            android:textSize="32dp"
            android:layout_centerVertical="true"
            android:layout_alignStart="@+id/textView2"
            android:layout_gravity="bottom|left"
            android:layout_marginBottom="60dp"
            android:layout_marginLeft="30dp" />

        <SeekBar
            android:layout_width="247dp"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar"
            android:layout_marginTop="43dp"
            android:layout_below="@+id/textView3"
            android:max="99"
            android:indeterminate="false"
            android:layout_alignStart="@+id/textView3"
            android:layout_alignEnd="@+id/switch1"
            android:progress="50"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="10dp" />

        <Switch
            android:layout_width="262dp"
            android:layout_height="wrap_content"
            android:id="@+id/switch1"
            android:layout_gravity="left|center_vertical"
            android:layout_alignBottom="@+id/textView2"
            android:textSize="32dp" android:layout_alignStart="@+id/switch2"
            android:layout_alignEnd="@+id/switch2"
            android:checked="true"
            android:text="SE"
            android:textColor="@android:color/widget_edittext_dark"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="-20dp" />

        <Switch
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:id="@+id/switch2"
            android:layout_gravity="left|top"
            android:layout_centerHorizontal="true"
            android:checked="true"
            android:text="BGM"
            android:textOff="OFF"
            android:textOn="ON"

            android:layout_alignBottom="@+id/bgm"
            android:layout_alignParentEnd="true"
            android:textSize="32dp"
            android:layout_alignTop="@+id/bgm"
            android:layout_marginTop="100dp"
            android:textColor="@android:color/widget_edittext_dark"
            android:layout_marginLeft="30dp" />

        <TextView
            android:layout_width="297dp"
            android:layout_height="38dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="オプション"
            android:id="@+id/textView4"
            android:layout_gravity="center_horizontal|top"
            android:background="@color/colorPrimary" />


    </FrameLayout>

    <FrameLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="@color/colorWhite"
        android:backgroundTint="@android:color/white"
        tools:context="com.latte_project.stb.savethebird.SettingActivity">


    <Button
        android:layout_width="294dp"
        android:layout_height="wrap_content"
        android:text="公式サイト"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/seekBar"
        android:layout_marginBottom="32dp"
        android:layout_alignEnd="@+id/seekBar"
        android:layout_gravity="center_horizontal|bottom" />

    </FrameLayout>

    <!-- action bar menu -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="100px"
        >

        <ImageButton
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/homeBtn"
            android:src="@mipmap/sample_icon"
            android:onClick="tabClick"
            android:background="@android:color/white" />

        <ImageButton
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/characterBtn"
            android:src="@mipmap/chara"
            android:onClick="tabClick"
            android:background="@android:color/white" />

        <ImageButton
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/settingBtn"
            android:src="@mipmap/gear"
            android:onClick="tabClick"
            android:background="@android:color/white" />
    </LinearLayout>


</LinearLayout>
